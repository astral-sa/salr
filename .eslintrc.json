{
    "extends": "eslint:recommended",
    "rules": {
		"complexity": [1,12],
        "eqeqeq": [1, "smart"],
        "no-unused-vars": [1, {"vars": "all", "args": "none", "varsIgnorePattern": "Handler"}],
        "no-use-before-define": [2, "nofunc"],
        "no-eval": 2,
        /* style rules */
        "comma-dangle": [0, "always-multiline"],
        "no-empty": 1,
        "no-mixed-spaces-and-tabs": [1, "smart-tabs"],
        "no-regex-spaces": 1,
        "indent": 0,
        "quotes": 0,
        "linebreak-style": 0,
        "semi": [2, "always"]
    },
    "env": {
        "es6": true,
        "browser": true,
        "commonjs": true
    },
    "globals": {
        "Components": false, "Cu": true, "Ci": true, "Cc": true, "Cr": true, "Services": true, "onShutdown": true, "XPCOMUtils": true, "gBrowser": false,
		"content": false, "addMessageListener": false, "removeMessageListener": false, "sendSyncMessage": true, "sendAsyncMessage": true, "dump": false
    }
}