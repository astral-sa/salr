		<checkbox preference="enableKeyboardControls" 	 	label="Enable keyboard navigation of threads" />
	</vbox>
</groupbox>
<groupbox id="threadVideoGroup"
	data-category="paneThreads"
	hidden="true">
<caption label="Video Embed Options"/>
	<vbox>
		<checkbox id="enableVideoEmbedderCheckbox" preference="enableVideoEmbedder" label="Enable converting of video links to embeddable video:" />
		<checkbox id="videoEmbedderGetTitlesCheckbox" preference="videoEmbedderGetTitles" label="Fetch YouTube video titles" style="margin-left: 20px;"/>
		<separator class="thin" />
		<!--<caption label="Embedded Youtube Player Settings:" />
		<separator class="thin" />-->
		<hbox>
			<vbox>
				<groupbox id="threadYTSizeGroup"
					data-category="paneThreads">
					<caption label="Embedded Player Size" />
					<radiogroup id="radio_videoEmbedSize" preference="videoEmbedSize">
						<radio id="tinyvidsize" value="tiny" label="Tiny (480x300)" />
						<radio id="smallvidsize" value="small" label="Small (560x345)" />
						<radio id="mediumvidsize" value="medium" label="Medium (640x390)" />
						<radio id="largevidsize" value="large" label="Large (854x510)" />
						<radio id="giganticvidsize" value="gigantic" label="Gigantic (1280x750)" />
						<hbox align="center">
						<vbox>
							<radio id="customvidsize" value="custom" label="Custom:" />
						</vbox>
						<vbox>
							<label id="videoEmbedCustomWidthLabel" value="Width:" control="videoEmbedCustomWidthbox" />
							<textbox id="videoEmbedCustomWidthbox" preference="videoEmbedCustomWidth" size="4" maxlength="5" />
							</vbox>
							<vbox align="end">
							<separator />
							<label value="x" />
							</vbox>
							<vbox>
							<label id="videoEmbedCustomHeightLabel" value="Height:" control="videoEmbedCustomHeightbox" />
							<textbox id="videoEmbedCustomHeightbox" preference="videoEmbedCustomHeight" size="4" maxlength="5" />
							</vbox>
						</hbox>
					</radiogroup>
				</groupbox>
			</vbox>
			<separator class="thin" orient="vertical"/>
			<vbox>
				<groupbox id="threadYTQualGroup"
					data-category="paneThreads">
					<caption label="YouTube Player Default Quality" />
					<radiogroup id="radio_videoEmbedQuality" preference="videoEmbedQuality">
						<radio id="normalqual" value="normal" label="Automatic (quality is based on player size)" />
						<radio id="lowqual" value="low" label="Lowest quality available" />
						<radio id="hqqual" value="hq" label="480p SD (if available)" />
						<radio id="hdqual" value="hd" label="720p HD (if available)" />
						<radio id="hd1080qual" value="hd1080" label="1080p HD (if available)" />
					</radiogroup>
				</groupbox>
			</vbox>
		</hbox>
	</vbox>
</groupbox>


